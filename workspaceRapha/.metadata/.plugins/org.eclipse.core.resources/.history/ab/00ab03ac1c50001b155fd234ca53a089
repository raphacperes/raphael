package While;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
		/* 
		 * 
		 * 
		String email = "rc_peres@mail.com";		
		System.out.println("Original" + email);
		System.out.println("Maio " + email.toUpperCase());
		System.out.println("Minu " + email.toLowerCase());
		System.out.println("Qtde " + email.length());
		System.out.println("@ " + email.contains("@"));
		System.out.println("posicaocarac " + email.indexOf("@"));
		System.out.println("2a5carac " + email.substring(1,6));
		 * 
		 * 
		 * 
		 * 
		 * 
		
		//validar nome e idede
			deveter entre 5 e 20
			idade entre 18 e 8-
			
			o nome deve ter sobrenome
			no final exiba sobrenome
		*/
		
		
		
		String nome = JOptionPane.showInputDialog("Digite o email").toLowerCase();
		String idade = JOptionPane.showInputDialog("Digite o email").toLowerCase();

		
		
		String email = JOptionPane.showInputDialog("Digite o email").toLowerCase();
		while (email.contains("@")==false) {
			email = JOptionPane.showInputDialog("Inválido. Digite o email novamente").toLowerCase();
						
		}
		
		//laço de repetição
		
		System.out.println("Seja bem vindo: " + email.substring(0,email.indexOf("@")));
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
